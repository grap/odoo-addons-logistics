    <record id="view_res_partner_tree" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="is_favorite" widget="boolean_favorite" nolabel="1" string="Fav." attrs="{'invisible': [('supplier', '=', False)]}"/>
                <field name="name"/>
                <field name="city"/>
                <field name="zip"/>
                <field name="supplier" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_res_partner_supplier" model="ir.actions.act_window">
        <field name="name">Joint Buying Suppliers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_id" ref="view_res_partner_tree"/>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
                "joint_buying":1,
                "search_default_supplier": 1,
                "default_customer": 0,
                "default_supplier": 1,
                "default_is_company": 1,
                "form_view_ref": "joint_buying_base.view_res_partner_form",
            }
        </field>
    </record>

    <menuitem id="menu_res_partner_supplier"
        name="Joint Buying Suppliers"
        parent="joint_buying_base.menu_configuration"
        action="action_res_partner_supplier"
        sequence="2"
    />

</odoo>
