<odoo>

    <record id="view_joint_buying_transport_request_line_search" model="ir.ui.view">
        <field name="model">joint.buying.transport.request.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="start_action_type"/>
                <field name="starting_point_id"/>
                <field name="arrival_action_type"/>
                <field name="arrival_point_id"/>
            </search>
        </field>
    </record>

    <record id="view_joint_buying_transport_request_line_tree" model="ir.ui.view">
        <field name="model">joint.buying.transport.request.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="request_id"/>
                <field name="start_action_type"/>
                <field name="start_date"/>
                <field name="starting_point_id"/>
                <field name="arrival_action_type"/>
                <field name="arrival_date"/>
                <field name="arrival_point_id"/>
            </tree>
        </field>
    </record>

</odoo>
