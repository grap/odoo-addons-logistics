<odoo>

    <record id="view_joint_buying_purchase_order_line_search" model="ir.ui.view">
        <field name="model">joint.buying.purchase.order.line</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record id="view_joint_buying_purchase_order_line_tree" model="ir.ui.view">
        <field name="model">joint.buying.purchase.order.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="supplier_id"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="uom_id"/>
                <field name="product_uom_package_qty"
                    attrs="{'invisible': [('product_uom_package_qty', '=', 0.0)]}"/>
                <field name="price_unit"/>
                <field name="amount_untaxed" sum="Total Amount Untaxed"/>
            </tree>
        </field>
    </record>

    <record id="action_joint_buying_purchase_order_line_my" model="ir.actions.act_window">
        <field name="name">My Order Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">joint.buying.purchase.order.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_my_purchase', '=', True)]</field>
    </record>

    <menuitem id="menu_joint_buying_purchase_order_my_purchase_lines"
        name="My Order Lines"
        parent="joint_buying_product.menu_order"
        action="action_joint_buying_purchase_order_line_my"
        groups="joint_buying_base.group_joint_buying_manager"
        sequence="15"
    />


</odoo>
