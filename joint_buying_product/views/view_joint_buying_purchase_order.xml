<odoo>

    <record id="view_joint_buying_purchase_order_search" model="ir.ui.view">
        <field name="model">joint.buying.purchase.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="grouped_order_id"/>
                <field name="supplier_id"/>
                <field name="customer_id"/>
                <field name="purchase_state"/>
                <field name="state"/>
                <filter name="to_enter_by_customer" string="To Enter"
                    domain="[('state', '=', 'in_progress'), ('purchase_state', '=', 'draft')]"/>
            </search>
        </field>
    </record>

    <record id="view_joint_buying_purchase_order_tree" model="ir.ui.view">
        <field name="model">joint.buying.purchase.order</field>
        <field name="arch" type="xml">
            <tree decoration-info="purchase_state == 'draft'">
                <field name="name"/>
                <field name="supplier_id"/>
                <field name="customer_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="deposit_date"/>
                <field name="amount_untaxed" sum="Total Amount Untaxed"/>
                <field name="purchase_state"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_joint_buying_purchase_order_form" model="ir.ui.view">
        <field name="model">joint.buying.purchase.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm_purchase" type="object" string="Confirm order" class="oe_highlight"
                        attrs="{'invisible': ['|', '|', ('purchase_state', '!=', 'draft'), ('state', '!=', 'in_progress'), ('purchase_ok', '!=', 'ok')]}"/>
                    <button name="action_confirm_purchase" type="object" string="Confirm order"
                        attrs="{'invisible': ['|', '|', ('purchase_state', '!=', 'draft'), ('state', '!=', 'in_progress'), ('purchase_ok', '=', 'ok')]}"/>
                    <button name="action_draft_purchase" type="object" string="Reset to Draft"
                        attrs="{'invisible': ['|', ('purchase_state', '!=', 'done'), ('state', '!=', 'in_progress')]}"/>
                    <field name="purchase_state" widget="statusbar"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="grouped_order_id"/>
                            <field name="supplier_id"
                                context="{'joint_buying':1, 'form_view_ref': 'joint_buying_base.view_res_partner_form_joint_buying'}"/>
                            <field name="customer_id"
                                context="{'joint_buying':1, 'form_view_ref': 'joint_buying_base.view_res_partner_form_joint_buying'}"/>
                            <field name="total_weight"/>
                            <field name="line_qty" invisible="1"/>
                            <field name="purchase_ok" invisible="1"/>
                            <field name="amount_untaxed" invisible="1"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="deposit_date"/>
                            <field name="minimum_unit_amount" attrs="{'invisible': [('minimum_unit_amount', '=', 0)]}"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name="lines" string="Order line">
                            <field name="line_ids" attrs="{'readonly': ['|', ('purchase_state', '=', 'done'), ('state', '!=', 'in_progress')]}">
                                <tree editable="botttom" decoration-muted="qty == 0">
                                    <field name="product_id" context="{'joint_buying': 1}"/>
                                    <field name="purchase_qty" force_save="True"/>
                                    <field name="product_uom_package_id" force_save="True"
                                        attrs="{'invisible': [('has_same_uom', '=', True)]}"/>
                                    <field name="product_uom_package_qty" force_save="True"
                                        attrs="{'invisible': [('product_uom_package_qty', '=', 0.0)]}"/>
                                    <field name="qty" force_save="True"/>
                                    <field name="product_uom_id" force_save="True"/>
                                    <field name="price_unit" force_save="True"/>
                                    <field name="amount_untaxed" sum="Total Amount Untaxed"/>
                                    <field name="product_weight" force_save="True" invisible="1"/>
                                    <field name="has_same_uom" invisible="1"/>
                                </tree>
                            </field>
                             <!--  -->
                            <p class="alert alert-danger" role="alert"
                                attrs="{'invisible': [('purchase_ok', '!=', 'no_minimum_amount')]}">You have not reached the minimum amount.</p>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_joint_buying_purchase_order_all_orders" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">joint.buying.purchase.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_joint_buying_purchase_order_all_orders"
        name="Orders"
        parent="joint_buying_product.menu_all_orders"
        action="action_joint_buying_purchase_order_all_orders"
        groups="joint_buying_base.group_joint_buying_manager"
        sequence="12"
    />

    <record id="action_joint_buying_purchase_order_my_orders" model="ir.actions.act_window">
        <field name="name">My Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">joint.buying.purchase.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_my_purchase', '=', True)]</field>
        <field name="context">{
            'search_default_to_enter_by_customer': 1,
        }</field>
    </record>

    <menuitem id="menu_joint_buying_purchase_order_my_orders"
        name="My Orders"
        parent="joint_buying_product.menu_my_orders"
        action="action_joint_buying_purchase_order_my_orders"
        groups="joint_buying_base.group_joint_buying_manager"
        sequence="12"
    />


</odoo>
