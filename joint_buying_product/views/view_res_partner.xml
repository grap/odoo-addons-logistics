<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="action_partner_2_wizard_create_order" model="ir.actions.act_window">
        <field name="name">Create Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">joint.buying.wizard.create.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_res_partner" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="joint_buying_base.view_res_partner_form_joint_buying"/>
        <field name="groups_id" eval="[(4, ref('joint_buying_base.group_joint_buying_user'))]"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button type="action" class="oe_stat_button" icon="fa-list-o"
                        name="%(joint_buying_product.action_res_partner_2_product_product)d"
                        attrs="{'invisible': [('supplier', '=', False)]}">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="joint_buying_product_qty" widget="integer"/>
                        </span>
                        <span class="o_stat_text">Products</span>
                    </div>
                </button>
            </div>
            <field name="joint_buying_deposit_company_id" position="after">
                <field name="joint_buying_next_date_begin" attrs="{'invisible': [('supplier', '=', False)]}"/>
                <field name="joint_buying_next_date_end" attrs="{'invisible': [('supplier', '=', False)]}"/>
                <field name="joint_buying_frequency" attrs="{'invisible': [('supplier', '=', False)]}"/>
                <field name="joint_buying_next_date_deposit" attrs="{'invisible': ['|', ('supplier', '=', False), ('joint_buying_frequency', '=', 0)], 'required': [('joint_buying_frequency', '!=', 0)]}"/>
                <field name="joint_buying_delay_begin" attrs="{'invisible': ['|', ('supplier', '=', False), ('joint_buying_frequency', '=', 0)], 'required': [('joint_buying_frequency', '!=', 0]=}"/>
                <field name="joint_buying_delay_end" attrs="{'invisible': ['|', ('supplier', '=', False), ('joint_buying_frequency', '=', 0)], 'required': [('joint_buying_frequency', '!=', 0)]}"/>
            </field>
            <xpath expr="//header" position="inside">

                <button type="action" class="oe_stat_button" string="Generate Joint Buying Purchase"
                        name="%(joint_buying_product.action_partner_2_wizard_create_order)d"
                        attrs="{'invisible': [('supplier', '=', False)]}" />

            </xpath>
        </field>
    </record>


<!--
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="groups_id" eval="[(4, ref('account.group_account_manager'))]"/>
 -->

</odoo>
