<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="action_partner_2_wizard_create_order" model="ir.actions.act_window">
        <field name="name">Create Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">joint.buying.wizard.create.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_res_partner" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="joint_buying_base.view_res_partner_form_joint_buying"/>
        <field name="groups_id" eval="[(4, ref('joint_buying_base.group_joint_buying_user'))]"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
                <button type="action" class="oe_stat_button" string="Generate Joint Buying Purchase"
                        name="%(joint_buying_product.action_partner_2_wizard_create_order)d"
                        attrs="{'invisible': [('supplier', '=', False)]}" />
            </xpath>

            <div name="button_box" position="inside">
                <button type="action" class="oe_stat_button" icon="fa-list"
                        name="%(joint_buying_product.action_res_partner_2_product_product)d"
                        attrs="{'invisible': [('supplier', '=', False)]}">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="joint_buying_product_qty" widget="integer"/>
                        </span>
                        <span class="o_stat_text">Products</span>
                    </div>
                </button>
            </div>

            <field name="joint_buying_subscribed_company_ids" position="attributes">
                <attribute name="attrs">{'required': [('joint_buying_frequency', '!=', 0)]}</attribute>
            </field>


            <field name="joint_buying_pivot_company_id" position="attributes">
                <attribute name="attrs">{'required': [('joint_buying_frequency', '!=', 0)]}</attribute>
            </field>

            <field name="joint_buying_deposit_company_id" position="attributes">
                <attribute name="attrs">{'required': [('joint_buying_frequency', '!=', 0)]}</attribute>
            </field>

            <group name="vendor_setting" position="after">

                <group string="Next Order" colspan="4" col="4">
                    <field name="joint_buying_frequency"/>
                    <field name="joint_buying_next_start_date" string="Order Start Date"
                        attrs="{'required': [('joint_buying_frequency', '!=', 0)], 'invisible': [('joint_buying_frequency', '=', 0)]}"/>
                    <field name="joint_buying_next_end_date" string="Order End Date"
                        attrs="{'required': [('joint_buying_frequency', '!=', 0)], 'invisible': [('joint_buying_frequency', '=', 0)]}"/>
                    <field name="joint_buying_next_deposit_date" string="Deposit Date"
                        attrs="{'required': [('joint_buying_frequency', '!=', 0)], 'invisible': [('joint_buying_frequency', '=', 0)]}"/>
                </group>

                <group string="Minimum Amount" colspan="4" col="4">
                    <field name="joint_buying_minimum_amount" string="Grouped Order (€)"/>
                    <field name="joint_buying_minimum_unit_amount" string="Unit Order (€)"/>
                    <field name="joint_buying_minimum_weight" string="Grouped Order (kg)"/>
                    <field name="joint_buying_minimum_unit_weight" string="Unit Order (kg)"/>
                </group>

                <group string="Products" colspan="4">
                    <field name="joint_buying_product_ids" nolabel="1">
                        <tree editable="bottom" decoration-muted="purchase_ok == False">
                            <field name="default_code"/>
                            <field name="name"/>
                            <field name="uom_id" string="UoM"/>
                            <field name="uom_po_id" string="Invoice Supplier UoM"/>
                            <field name="uom_package_id" string="UoM Weight / Unit"/>
                            <field name="uom_package_qty"/>
                            <field name="lst_price" required="True" string="Pricing"/>
                            <field name="purchase_ok" widget="boolean_toggle"/>
                            <field name="weight"/>
                        </tree>
                    </field>
                </group>
            </group>

        </field>
    </record>

</odoo>
