<odoo>

    <record id="view_product_product_search" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="groups_id" eval="[(4, ref('joint_buying_base.group_joint_buying_user'))]"/>
        <field name="arch" type="xml">
            <field name="joint_buying_partner_id" />
        </field>
    </record>

    <record id="view_product_product_tree_joint_buying" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree>
                <field name="is_joint_buying" invisible="1"/>
                <field name="default_code"/>
                <field name="barcode"/>
                <field name="name"/>
                <field name="lst_price"/>
                <field name="type" invisible="1"/>
                <field name="uom_id" groups="uom.group_uom"/>
                <field name="product_tmpl_id" invisible="1"/>
                <field name="active" invisible="1"/>
                <field name="joint_buying_partner_id"/>
            </tree>
        </field>
    </record>

    <record id="view_product_product" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="groups_id" eval="[(4, ref('joint_buying_base.group_joint_buying_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Offer For joint Buying" type="object" name="create_joint_buying_product"
                    attrs="{'invisible': ['|', ('display_joint_buying_propagation', '=', False), ('joint_buying_product_id', '!=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='description']/.." position="before">
                <group name="joint_buying" string="Joint Buying">
                    <group name="group_joint_buying_global">
                        <field name="joint_buying_partner_id" context="{'joint_buying': 1}"
                            attrs="{'invisible': [('is_joint_buying', '=', False)], 'required': [('is_joint_buying', '=', True)]}"/>
                    </group>
                    <group name="group_joint_buying_local">
                        <!-- TODO set invisible -->
                        <field name="display_joint_buying_propagation"/>
                        <field name="joint_buying_product_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="action_product_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
                "joint_buying": 1,
                "tree_view_ref": "joint_buying_product.view_product_product_tree_joint_buying",
            }
        </field>
    </record>



    <menuitem id="menu_product_product"
        name="Products"
        parent="joint_buying_base.menu_configuration"
        action="action_product_product"
        groups="product.group_product_variant"
        sequence="10"
    />

</odoo>
