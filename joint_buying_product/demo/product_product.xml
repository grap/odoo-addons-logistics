    <!-- Local Products ELD -->
    <record id="product_ELD_orangettes" model="product.product">
        <field name="default_code">ELD-ORANGETTE</field>
        <field name="image" type="base64" file="joint_buying_product/static/src/img/product_ELD_orangettes-image.png"/>
        <field name="is_joint_buying" eval="False"/>
        <field name="company_id" ref="joint_buying_base.company_ELD"/>
        <field name="name">Orangette Sachet 200gr</field>
        <field name="price">12</field>
    </record>

    <record id="product_ELD_gingembrettes" model="product.product">
        <field name="default_code">ELD-GINGEMBRETTE</field>
        <field name="image" type="base64" file="joint_buying_product/static/src/img/product_ELD_gingembrettes-image.png"/>
        <field name="is_joint_buying" eval="False"/>
        <field name="company_id" ref="joint_buying_base.company_ELD"/>
        <field name="name">Gingembrette Sachet 200gr</field>
        <field name="price">10</field>
    </record>

    <function model="product.product" name="create_joint_buying_product">
        <value eval="[
            ref('joint_buying_product.product_ELD_orangettes'),
            ref('joint_buying_product.product_ELD_gingembrettes')]"
        />
    </function>

    <!-- Local Products 3PP -->
    <record id="product_3PP_orangettes" model="product.product">
        <field name="default_code">3PP-ORANGETTE</field>
        <field name="is_joint_buying" eval="False"/>
        <field name="company_id" ref="joint_buying_base.company_3PP"/>
        <field name="name">Orangette Sachet 200gr @ Three Peas</field>
        <field name="joint_buying_product_id" model="product.product"
            eval="obj().browse(ref('joint_buying_product.product_ELD_orangettes')).joint_buying_product_id.id"/>
    </record>

    <record id="product_3PP_gingembrettes" model="product.product">
        <field name="default_code">3PP-GINGEMBRETTE</field>
        <field name="is_joint_buying" eval="False"/>
        <field name="company_id" ref="joint_buying_base.company_3PP"/>
        <field name="name">Gingembrette Sachet 200gr @ Three Peas</field>
        <field name="joint_buying_product_id" model="product.product"
            eval="obj().browse(ref('joint_buying_product.product_ELD_gingembrettes')).joint_buying_product_id.id"/>
    </record>

    <!-- Local Products LSE -->
    <record id="product_LSE_patatoe_agila" model="product.product">
        <field name="name">Potatoes Agila (Bag of 10kg) @ Super Mall</field>
        <field name="type">product</field>
        <field name="default_code">LSE-PATATOE-AGILA</field>
        <field name="is_joint_buying" eval="False"/>
        <field name="company_id" ref="joint_buying_base.company_LSE"/>
        <field name="joint_buying_product_id" ref="product_ronzon_patatoe_agila"/>
        <field name="uom_id" ref="uom.product_uom_kgm"/>
        <field name="uom_po_id" ref="uom.product_uom_kgm"/>
        <field name="price">2.5</field>
    </record>

    <!-- Local Products PZI -->
    <record id="product_PZI_orange_navelina" model="product.product">
        <field name="default_code">PZI-OR-NAV</field>
        <field name="company_id" ref="joint_buying_base.company_PZI"/>
        <field name="name">Orange Navelina</field>
        <field name="price">1.5</field>
        <field name="uom_id" ref="uom.product_uom_kgm"/>
        <field name="uom_po_id" ref="uom.product_uom_kgm"/>
    </record>

    <record id="product_PZI_orange_moro" model="product.product">
        <field name="default_code">PZI-OR-MOR</field>
        <field name="company_id" ref="joint_buying_base.company_PZI"/>
        <field name="name">Orange Moro (bloody)</field>
        <field name="price">1.6</field>
        <field name="uom_id" ref="uom.product_uom_kgm"/>
        <field name="uom_po_id" ref="uom.product_uom_kgm"/>
    </record>

    <record id="product_PZI_oil" model="product.product">
        <field name="default_code">PZI-OIL</field>
        <field name="company_id" ref="joint_buying_base.company_PZI"/>
        <field name="name">Olive Oil</field>
        <field name="price">10</field>
    </record>

    <record id="product_PZI_other" model="product.product">
        <field name="default_code">PZI-OTH</field>
        <field name="company_id" ref="joint_buying_base.company_PZI"/>
        <field name="name">Other Product Allway present</field>
        <field name="price">5</field>
    </record>

    <function model="product.product" name="create_joint_buying_product">
        <value eval="[
            ref('joint_buying_product.product_PZI_other'),
            ref('joint_buying_product.product_PZI_orange_navelina'),
            ref('joint_buying_product.product_PZI_orange_moro'),
            ref('joint_buying_product.product_PZI_oil'),
        ]"
        />
    </function>

    <function model="product.product" name="write">
        <value model="product.product" eval="[
            obj().browse(ref('joint_buying_product.product_PZI_orange_navelina')).joint_buying_product_id.id,
            obj().browse(ref('joint_buying_product.product_PZI_orange_moro')).joint_buying_product_id.id,
        ]"
        />
        <value eval="{'joint_buying_category_id': ref('joint_buying_product.category_fruits_vegetables_PZI')}"/>
    </function>

    <function model="product.product" name="write">
        <value model="product.product" eval="[
            obj().browse(ref('joint_buying_product.product_PZI_oil')).joint_buying_product_id.id,
        ]"
        />
        <value eval="{'joint_buying_category_id': ref('joint_buying_product.category_oil_PZI')}"/>
    </function>

</odoo>
